<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardBackgroundColor="@color/offer_back"
    app:cardCornerRadius="25dp"
    app:cardElevation="6dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_IMG_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile"
            app:civ_border_width="2dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/user_TV_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/user_IMG_img"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/user_IMG_img"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/user_TV_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_TV_name"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/user_IMG_img"
            android:text="Gender: "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/user_TV_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_TV_gender"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/user_IMG_img"
            android:text="Age: "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/user_TV_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_TV_age"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/user_IMG_img"
            android:text="Phone: "
            android:textColor="@color/black"
            android:textSize="15sp" />

<!--        <com.google.android.material.textview.MaterialTextView-->
<!--            android:id="@+id/user_TV_creator"-->
<!--            android:layout_width="80dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_alignTop="@id/user_IMG_img"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:layout_marginTop="7dp"-->
<!--            android:layout_marginEnd="18dp"-->
<!--            android:text="Creator "-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="20sp" />-->


    </RelativeLayout>

</androidx.cardview.widget.CardView>