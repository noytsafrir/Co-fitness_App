            android:layout_height="wrap_content"
            android:text="My Offers"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </RelativeLayout>



