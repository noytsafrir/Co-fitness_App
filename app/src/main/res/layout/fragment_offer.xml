<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrund"
    tools:context=".Fragments.ShowOfferFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/offer_back">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/main_LL_top"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5sp"
                            android:layout_marginBottom="7dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/offer_IMG_type"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="sport type icon"
                                android:src="@drawable/ic_tennis" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/offer_TV_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:text="Type"
                                android:textColor="@color/black"
                                android:textSize="30sp"
                                android:textStyle="bold" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/offer_LL_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/offer_IMG_img"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="10sp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/offer_IMG_date"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="calendar icon"
                                android:src="@drawable/ic_calendar" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/offer_TV_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:text="00/00/0000"
                                android:textColor="@color/black"
                                android:textSize="22sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/offer_LL_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/offer_IMG_img"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="5sp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/offer_IMG_time"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="clock icon"
                                android:src="@drawable/ic_clock" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/offer_TV_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:text="00:00"
                                android:textColor="@color/black"
                                android:textSize="22sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/offer_LL_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/offer_IMG_img"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="5sp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/offer_IMG_location"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="location icon"
                                android:src="@drawable/ic_location" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/offer_TV_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:text="where"
                                android:textColor="@color/black"
                                android:textSize="22sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/offer_LL_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/offer_IMG_img"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="5sp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/offer_IMG_level"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="level icon"
                                android:src="@drawable/ic_level" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/offer_TV_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:text="level"
                                android:textColor="@color/black"
                                android:textSize="22sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/offer_LL_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/offer_IMG_img"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="5sp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/offer_IMG_cost"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="money icon"
                                android:src="@drawable/ic_cost" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/offer_TV_cost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:text="cost"
                                android:textColor="@color/black"
                                android:textSize="22sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/offer_LL_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/offer_IMG_img"
                            android:layout_marginStart="41dp"
                            android:layout_marginTop="5sp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/offer_IMG_details"
                                android:layout_width="24dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="note icon"
                                android:src="@drawable/ic_notes" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/offer_TV_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:text="more details..."
                                android:textColor="@color/black"
                                android:textSize="22sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/offer_BTN_back"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        app:icon="@drawable/ic_return"
                        app:iconSize="30dp"
                        app:iconTint="#000000" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/offer_RCV_users"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/main_LL_top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="3.3"
            android:paddingTop="10dp"
            tools:listitem="@layout/user_item" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>
